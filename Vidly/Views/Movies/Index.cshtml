@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
<button style="margin-bottom:30px" class="btn btn-primary" type="button" onclick="location.href='@Url.Action("New", "Movies")'">New Movie</button>
    @if (!@Model.Any())
    {
        <p>We don't have any Movies yet .</p>
    }
    else
    {
        <table class="table table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Gnere</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {

                    <tr>
                        <td>@Html.ActionLink(movie.MovieName, "Edit", "Movies", new { id = movie.MovieId}, null)</td>
                        <td> @movie.Genre.Name</td>
                    </tr>
                }
            </tbody>



        </table>
    }

