
@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@if (!Model.Any())
{
    <p>We don't have any customers yet .</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.CustomerName, "Edit", "Customers", new { id = customer.CustomerId },null)</td>
                    <td> @customer.MemershipType.MembershipTypeName</td>
                </tr>
            }

        </tbody>

    </table>
}


